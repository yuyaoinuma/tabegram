<div class="row">
  <% @users.each do |user| %>
    <div class="row-eq-height  col-md-4 py-2">
      <div class="card">
        <div class="card border-warning rounded">
          <%= link_to user_path(user) do%>
            <div class="card-body text-center">
            <% if user.image_profile? %>
              <%= image_tag user.image_profile.url, size: "250x250", class: "rounded-circle"  %>
            <% else %>
              <img class="mr-2 rounded-circle" src="<%= gravatar_url(user, { size: "250x250" }) %>" alt="">
            <% end %>
            </div>
            <div class="card-name text-center">
              <h3><%= user.name %></h3>
            </div>
            <div class="card-text", style="height:70px"> 
              <p><%= truncate(user.profile,length:60) %></p>
            </div>
          <% end %>
          <div class="fallow-user text-center">
            <div id="fallow__button--<%= user.id %>">
              <%= render 'relationships/follow_button', user: user %>
            </div> 
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>