<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <div class="users-image mr-2 mb-3">
          <% if user.image_profile? %>
            <%= image_tag user.image_profile.url, size: "50x50", class: "rounded-circle"  %>
          <% else %>
          <img class="rounded-circle" src="<%= gravatar_url(user, { size: "50x50" }) %>" alt="">
          <% end %>
        </div>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div id="fallow__button--<%= user.id %>">
            <%= render 'relationships/follow_button', user: user %>
          </div> 
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>



